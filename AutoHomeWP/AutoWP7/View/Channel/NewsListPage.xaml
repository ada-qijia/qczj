                                        <!--详情-->
                                        <!--<TextBlock  Text="{Binding indexdetail}"  
                                                HorizontalAlignment="Left"
                                                TextWrapping="Wrap"    
                                                Margin="0,-55,0,0"
                                                FontSize="16"
                                                Foreground="Gray"/>-->
                                        <!--时间-->
                                        <TextBlock   FontSize="16"   
											Margin="0,-33,15,0"
											HorizontalAlignment="Left"
											Foreground="Gray"
											Text="{Binding time}"/>
                                        <!--回复数-->

                                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                                   HorizontalAlignment="Right"
											FontSize="17"
											Margin="35,-33"
											Foreground="Gray"
											Text="{Binding replycount}"/>
