									Tap="newsGrid_Tap"
									Visibility="{Binding showData}"
									x:Name="NaviGoArticleEndPage" 
									Margin="0"
									HorizontalAlignment="Left">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="120"/>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Width="120" Height="90" 
										Grid.RowSpan="2" Grid.Row="0"
										Source="Images/smallImage.jpg"/>
                                    <Image Width="120" Height="90" 
										Grid.RowSpan="2" Grid.Row="0"                                                              Source="{Binding bitmap}"/>
                                    <StackPanel  Width="320" Grid.Column="1" Grid.Row="0">
                                        <!--标题-->
                                        <TextBlock   HorizontalAlignment="Left"                                                                   Foreground="Black" 
											Margin="0,10,0,0" 
											TextWrapping="Wrap"
											TextTrimming="WordEllipsis"
											Text="{Binding title}" 
											FontSize="22"/>

