<UserControl x:Class="AutoWP7.UcControl.CarFilderFilterItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="72" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Background="#00000000">
        <Rectangle Style="{StaticResource SplitBar_Horizontal_Style}"/>
        <TextBlock x:Name="filterNameTextBlock" Text="{Binding DisplayName}" FontSize="28" Foreground="#ff000000" VerticalAlignment="Center"/>
        <TextBlock x:Name="notSetTextBlock" Text="不限" FontSize="28" Foreground="#ff808080" 
                   VerticalAlignment="Center" HorizontalAlignment="Right"
                   Margin="0,0,36,0"/>
        <TextBlock x:Name="filterValueTextBlock" Text="" FontSize="28" Foreground="{StaticResource App_Theme_Color}" 
                   VerticalAlignment="Center" HorizontalAlignment="Right"
                   Margin="0,0,36,0" />
        <Image Source="/Images/ArrowR.png" Stretch="None" HorizontalAlignment="Right" Margin="0,0,0,0"/>
    </Grid>
</UserControl>